<h1>Editing services</h1>

<%= error_messages_for :services %>

<% form_for(@services) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Picture</b><br />
    <%= f.text_field :picture %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @services %> |
<%= link_to 'Back', services_path %>
